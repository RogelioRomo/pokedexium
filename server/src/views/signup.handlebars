<main class="flex items-center justify-center h-screen">
    {{!< layouts/main}}
    <form class="flex flex-col items-center bg-white border-solid border-8 border-[#0071b9] rounded-lg p-4" action="/api/session/signup" method="post">
        <h1 class="p-4 hidden">Pokedexium</h1>
        <img class="" src="/images/pokemon-logo.svg" alt="pokemon logo">
        <div class="flex flex-row p-2 mb-2 border-solid border-b-2">
            <img class="w-6" src="/images/username.svg" alt="username">
            <input class="border-solid rounded-lg ml-3 p-2" type="text" id="username" name="username" placeholder="Enter your username" required>
        </div>
        <div class="flex flex-row p-2 mb-2 border-solid border-b-2">
            <img class="w-6" src="/images/email.svg" alt="email">
            <input class="border-solid rounded-lg ml-3 p-2" type="email" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="flex flex-row p-2 mb-2 border-solid border-b-2">
            <img class="w-6" src="/images/password.svg" alt="password">
            <input class="border-solid rounded-lg ml-3 p-2" type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>
        <button class="my-10" type="submit"><img src="/images/pokeball.svg" alt="signup" title="signup"></button>
    </form>
</main>